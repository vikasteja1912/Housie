<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="30sp"
            android:background="#E9E9E9"
            android:paddingStart="33dp"
            android:paddingEnd="33dp"
            android:paddingTop="33dp"
            android:paddingBottom="33dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="30sp"
            android:background="#E9E9E9"
            android:paddingStart="33dp"
            android:paddingEnd="33dp"
            android:paddingTop="33dp"
            android:paddingBottom="33dp"
            app:layout_constraintLeft_toRightOf="@id/one"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="30sp"
            android:background="#E9E9E9"
            android:paddingStart="33dp"
            android:paddingEnd="33dp"
            android:paddingTop="33dp"
            android:paddingBottom="33dp"
            app:layout_constraintLeft_toRightOf="@id/two"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="30sp"
            android:background="#E9E9E9"
            android:paddingStart="33dp"
            android:paddingEnd="33dp"
            android:paddingTop="33dp"
            android:paddingBottom="33dp"
            app:layout_constraintLeft_toRightOf="@id/three"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="30sp"
            android:background="#E9E9E9"
            android:paddingStart="33dp"
            android:paddingEnd="33dp"
            android:paddingTop="33dp"
            android:paddingBottom="33dp"
            app:layout_constraintLeft_toRightOf="@id/four"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="30sp"
            android:background="#E9E9E9"
            android:paddingStart="33dp"
            android:paddingEnd="33dp"
            android:paddingTop="33dp"
            android:paddingBottom="33dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/one" />

    <TextView
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="30sp"
            android:background="#E9E9E9"
            android:paddingStart="33dp"
            android:paddingEnd="33dp"
            android:paddingTop="33dp"
            android:paddingBottom="33dp"
            app:layout_constraintLeft_toRightOf="@id/six"
            app:layout_constraintTop_toBottomOf="@id/two" />

    <TextView
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="30sp"
            android:background="#E9E9E9"
            android:paddingStart="33dp"
            android:paddingEnd="33dp"
            android:paddingTop="33dp"
            android:paddingBottom="33dp"
            app:layout_constraintLeft_toRightOf="@id/seven"
            app:layout_constraintTop_toBottomOf="@id/three" />


    <TextView
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="30sp"
            android:background="#E9E9E9"
            android:paddingStart="33dp"
            android:paddingEnd="33dp"
            android:paddingTop="33dp"
            android:paddingBottom="33dp"
            app:layout_constraintLeft_toRightOf="@id/eight"
            app:layout_constraintTop_toBottomOf="@id/four" />


    <TextView
            android:id="@+id/ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="30sp"
            android:background="#E9E9E9"
            android:paddingStart="33dp"
            android:paddingEnd="33dp"
            android:paddingTop="33dp"
            android:paddingBottom="33dp"
            app:layout_constraintLeft_toRightOf="@id/nine"
            app:layout_constraintTop_toBottomOf="@id/five" />


    <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="result"
            android:textSize="30sp"
            android:background="#E9E9E9"
            android:paddingStart="33dp"
            android:paddingEnd="33dp"
            android:paddingTop="33dp"
            android:paddingBottom="33dp"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/eight"/>

    <Button
            android:id="@+id/generate_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/result"
            android:text="generate random number"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

    </Button>

    <Button
            android:id="@+id/click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="click"
            app:layout_constraintTop_toBottomOf="@id/six"
            app:layout_constraintLeft_toLeftOf="parent">

    </Button>




</androidx.constraintlayout.widget.ConstraintLayout>